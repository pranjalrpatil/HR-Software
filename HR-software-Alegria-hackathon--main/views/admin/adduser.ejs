<% layout('layouts/boilerplate')%>
    <form action="/admin/adduser" method="POST">
        <div class="mb-3">
            <select class="form-select" aria-label="Default select example" name="type">
                <option selected>Open this select menu</option>
                <option value="admin">admin</option>
                <option value="hr">HR</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" placeholder="username" name="username" id="username"  required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" placeholder="email" password" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" placeholder="password" password" id="password" name="password" required>
        </div>
        <button class="btn btn-success">Register</button>
    </form>
    <a href="/admin">Admin page</a>
